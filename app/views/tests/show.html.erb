<h1>Тест: <%= @test.title %></h1>
<%= link_to "Создать тест", :new_test %>

<table>
  <thead>
  <tr>
    <th>Название</th>
    <th>Уровень</th>
    <th>Категория</th>
    <th>Автор</th>
  </tr>
  </thead>

  <tbody>
  <tr>
    <td class="body"><%= @test.title %></td>
    <td class="id"><%= @test.level %></td>
    <td class="id"><%= @test.category_id %></td>
    <td class="id"><%= @test.author_id %></td>
  </tr>
  </tbody>
</table>

<br>

<table>
  <thead>
  <tr>
    <th>Вопрос</th>
    <th>Test ID</th>
    <th colspan="3">Функции</th>
  </tr>
  </thead>

  <tbody>
  <% @test.questions.each do |question| %>
    <tr>
      <td class="body"><%= question.body %></td>
      <td class="id"><%= question.test_id %></td>
      <td class="functions"><%= link_to "Показать", question %></td>
      <td class="functions"><%= link_to "Редактировать", edit_question_path(question) %></td>
      <td class="functions"><%= link_to "Удалить", question, method: :delete, data: { confirm: "Удалить вопрос?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "<-- Назад", :tests %>
