<h1>Тест: <%= @test.title %></h1>
<%= link_to "Создать тест", new_test_path %>

<table>
  <%= render 'table' %>
  <%= render @test %>
</table>

<br>

<h2>Вопросы:</h2>

<%= link_to "Создать вопрос", new_test_question_path(@test.id) %>

<table>
  <thead>
  <tr>
    <th>Вопрос</th>
    <th>Test ID</th>
    <th colspan="3">Функции</th>
  </tr>
  </thead>

  <%= render @test.questions %>
</table>

<%= link_to "Назад", :tests %>
