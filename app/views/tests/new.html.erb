<h1>Create New Question</h1>

<form action="<%= tests_path %>" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token%>" type="hidden">
  <p>
    <label for="test-author_id">Author ID:</label>
    <input type="number" name="test[author_id]" id="test-author">
  </p>

  <p>
    <label for="test-title">Title:</label>
    <input type="text" name="test[title]" id="test-title">
  </p>

  <p>
    <label for="test-level">Level:</label>
    <input type="number" name="test[level]" id="test-level">
  </p>

  <p>
    <label for="test-category_id">Category ID:</label>
    <input type="number" name="test[category_id]" id="test-category_id">
  </p><br>

  <input type="submit" value="Create">
</form>