<%= form_with model: [@question, @answer], local: true do |form| %>

<%#= form_with(model: answer) do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <p>
    <%= form.label :text %>
    <%= form.text_area :text, id: :answer_text, rows: 7, cols: 60 %>
  </p>

  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct %>
  </p>

  <div class="actions">
    <p><%= form.submit %></p>
  </div>
<% end %>
