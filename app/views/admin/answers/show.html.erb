<h1>Ответ на вопрос: <%= @answer.question.body %></h1>

<table>
  <tr>
    <th>Ответ</th>
    <th>Правильный</th>
    <th colspan="3">Функции</th>
  </tr>

  <tr>
    <td class="title"><%= @answer.text %></td>
    <td class="title"><%= @answer.correct %></td>
    <td class="functions"><%= link_to 'Редактировать', edit_admin_answer_path(@answer) %></td>
    <td class="functions"><%= link_to 'Удалить', @answer, method: :delete, data: {confirm: 'Удалить ответ?'}%></td>
  </tr>
</table>

<%= link_to 'Назад', admin_question_path(@answer.question) %>
