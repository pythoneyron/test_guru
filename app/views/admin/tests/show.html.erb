<h1><%= t('.test') %>: <%= @test.title %></h1>
<%= link_to t('.create_test'), new_admin_test_path %>

<table class="table table-striped">
  <tr class="table-primary">
    <th><%= t('.title') %></th>
    <th><%= t('.category') %></th>
    <th><%= t('.author') %></th>
    <th><%= t('.level') %></th>
    <th><%= t('.count_questions') %></th>
    <th><%= t('.time_to_solve') %></th>
    <th colspan="3"><%= t('.actions') %></th>
  </tr>
  <%= render @test %>
</table>

<br>

<h2><%= t('.questions') %>:</h2>

<%= link_to t('.create_question'), new_admin_test_question_path(@test.id) %>

<table class="table table-striped">
  <tr class="table-primary">
    <th><%= t('.question') %></th>
    <th><%= t('.test_id') %></th>
    <th colspan="3"><%= t('.actions') %></th>
  </tr>
  <%= render partial: 'admin/questions/question', collection: @test.questions %>
</table>

<%= link_to t('.back'), admin_tests_path %>
