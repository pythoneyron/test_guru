<h1>Тест: <%= @test.title %></h1>
<%= link_to "Создать тест", new_admin_test_path %>

<table>
  <tr>
    <th>Название</th>
    <th>Категория</th>
    <th>Автор</th>
    <th>Уровень сложности</th>
    <th>Количество вопросов</th>
    <th colspan="3">Функции</th>
  </tr>
  <%= render @test %>
</table>

<br>

<h2>Вопросы:</h2>

<%= link_to "Создать вопрос", new_test_question_path(@test.id) %>

<table>
  <thead>
  <tr>
    <th>Вопрос</th>
    <th>Test ID</th>
    <th colspan="3">Функции</th>
  </tr>
  </thead>
  <%= render partial: 'questions/question', collection: @test.questions %>
</table>

<%= link_to "Назад", admin_tests_path %>
