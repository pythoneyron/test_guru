<tr>
  <td class="title align-middle"><%= badge.title %></td>
  <td class="id align-middle"><%= badge.url_image %></td>
  <td class="id align-middle"><%= badge.rule %></td>
  <td class="user_id align-middle">
    <% badge.users.each { |user| user.first_name }%>
  </td>
  <td class="functions align-middle"><%= link_to t('.show'), admin_badge_path(badge) %></td>
  <td class="functions align-middle"><%= link_to t('.edit'), edit_admin_badge_path(badge)%></td>
  <td class="functions align-middle">
    <%= link_to t('.delete'), admin_badge_path(badge), method: :delete, data: { confirm: t('.confirm') } %>
  </td>
</tr>
