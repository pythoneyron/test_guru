<table>
  <thead>
  <tr>
    <th>Вопрос</th>
    <th>Test ID</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @questions.each do |question| %>
    <tr>
      <td class="title"><%= question.body %></td>
      <td class="id"><%= question.test_id %></td>
      <td class="functions"><%= link_to "Просмотреть", question %></td>
      <td class="functions"><%= link_to "Редактировать", edit_question_path(question) %></td>
      <td class="functions"><%= link_to "Удалить", question, method: :delete, data: { confirm: "Удалить вопрос?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>