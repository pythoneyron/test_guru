<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Test ID</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @questions.each do |question| %>
    <tr>
      <td><%= question.body %></td>
      <td><%= question.test_id %></td>
      <td><%= link_to "Show", question %></td>
      <td><%= link_to "Edit", edit_question_path(question) %></td>
      <td><%= link_to "Destroy", question, method: :delete, data: { confirm: "Ты серьезно?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>